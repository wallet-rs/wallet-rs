{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    "bin/cli": {
      "release-type": "rust"
    },
    "crates/core": {
      "release-type": "rust"
    },
    "crates/metamask": {
      "release-type": "rust"
    },
    "crates/signer": {
      "release-type": "rust"
    },
    "packages/signer": {
      "release-type": "node"
    }
  },
  "plugins": [
    {
      "type": "cargo-workspace",
      "merge": false
    },
    {
      "type": "node-workspace",
      "merge": false
    },
    {
      "type": "linked-versions",
      "groupName": "signer",
      "components": [
        "crates/signer", "@wallet-rs/signer"
      ]
    }
  ]
}
